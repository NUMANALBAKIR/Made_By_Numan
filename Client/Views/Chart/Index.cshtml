
<div class="container-fluid p-5 text-black text-center mt-2" style="border: solid 1px;">
    <h1>Draw Chart.</h1>
    <h4>( Using <i>Javascript, Google-charts.</i>)</h4>
</div>

<div class="container mt-5">
    <div class="row">
        <h4>Please enter values and click submit!</h4>

        <div class="col-6">
            <form action="/action_page.php">
                <div class="mb-3 mt-3">
                    <label for="work" class="form-label">Work :</label>
                    <input type="text" class="form-control" id="work" name="work" value=11>
                </div>
                <div class="mb-3 mt-3">
                    <label for="eat" class="form-label">Eat :</label>
                    <input type="text" class="form-control" id="eat" name="eat" value=2>
                </div>
                <div class="mb-3 mt-3">
                    <label for="travel" class="form-label">Travel :</label>
                    <input type="text" class="form-control" id="travel" name="travel" value=3>
                </div>
                <div class="mb-3 mt-3">
                    <label for="watchtv" class="form-label">Watch TV :</label>
                    <input type="text" class="form-control" id="watchtv" name="watchtv" value=1>
                </div>
                <div class="mb-3 mt-3">
                    <label for="sleep" class="form-label">Sleep :</label>
                    <input type="text" class="form-control" id="sleep" name="sleep" value=7>
                </div>

                <div class="mb-3 mt-3">
                    <input type="button" value="Submit" onclick="drawChart()" class="btn btn-primary btn-lg">
                </div>
            </form>
        </div>

        <div class="col-6">
            <div id="piechart_3d" style="width: 900px; height: 500px;"></div>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            let work = Number(document.getElementById('work').value);
            let eat = Number(document.getElementById('eat').value);
            let travel = Number(document.getElementById('travel').value);
            let watchtv = Number(document.getElementById('watchtv').value);
            let sleep = Number(document.getElementById('sleep').value);

            var data = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],
                ['Work', work],
                ['Eat', eat],
                ['Travel', travel],
                ['Watch TV', watchtv],
                ['Sleep', sleep]
            ]);

            var options = {
                backgroundColor: 'transparent',
                is3D: true,
                fontSize: 20,
                chartArea: { left: 70, top: 0, width: '70%', height: '100%' }
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
            chart.draw(data, options);
        }
    </script>
}