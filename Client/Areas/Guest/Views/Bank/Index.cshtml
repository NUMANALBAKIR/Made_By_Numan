@using Client.Models.BankDTOs;
@model Client.Models.ViewModels.BankDashboardVM
 
<div class="container-fluid p-2 text-black mt-2 mx-1 d-flex" style="border: solid 1px;">

    <div class="col-4">
        <h3>
            <u>Account Holder:</u><br />
            <b style="color:maroon;">
                @Model.BankAccount.HolderName
            </b>
        </h3>
    </div>

    <div class="col-8">
        <h3><i class="bi bi-bank2 text-secondary"></i>&nbsp;&nbsp;Bank-of-Numan</h3>
        <h5>[ <b>Balances saved in Persistence </b>]</h5>
    </div>
</div>

<div class="container mt-2 p-5 mx-1 bg-primary">
    <!-- row 1 -->
    <div class="row">
        <div class="col-6">
            <div class="card border-light mb-3" style="max-width: 20rem;">
                <div class="card-header">Checkings Account</div>
                <div class="card-body">
                    <h4 class="card-title">Balance: $<b>@Model.BankAccount.CheckingsBalance</b></h4>
                    <hr />
                    <p class="card-text text-danger">You must have sufficient <b>Checkings Account balance</b> to Order Food using link above.</p>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card border-light mb-3" style="max-width: 20rem;">
                <div class="card-header">Savings Account</div>
                <div class="card-body">
                    <h4 class="card-title">Balance: $<b>@Model.BankAccount.SavingsBalance</b></h4>
                </div>
            </div>
        </div>
    </div>

    <!-- row 2 -->
    <div class="row pt-4">

        <!-- Accordion div begins -->
        <div class="col-4">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            Add money&nbsp;<b>to Savings:</b>
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccount.BankAccountId" />
                                <input hidden asp-for="BankAccount.AppUserId" />
                                <input hidden asp-for="BankAccount.SavingsBalance" />
                                <input hidden asp-for="BankAccount.CheckingsBalance" />
                                <input hidden asp-for="BankAccount.HolderName" />

                                <label asp-for="BankAccount.TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="BankAccount.@Model.BankAccount.TransactionAmount" class="form-control" id="amount">
                                
                                <button type="submit" asp-action="AddToSavings" class="btn btn-primary">Add</button>
                                <span asp-validation-for="BankAccount.TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Transfer from&nbsp;<b>Savings to Checkings:</b>
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccount.BankAccountId" />
                                <input hidden asp-for="BankAccount.AppUserId" />
                                <input hidden asp-for="BankAccount.SavingsBalance" />
                                <input hidden asp-for="BankAccount.CheckingsBalance" />
                                <input hidden asp-for="BankAccount.HolderName" />

                                <label asp-for="BankAccount.TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="BankAccount.TransactionAmount" class="form-control"  id="amount">

                                <button type="submit" asp-action="SavingsToCheckings" class="btn btn-primary">Send</button>
                                <span asp-validation-for="BankAccount.TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Transfer from&nbsp;<b>Checkings to Savings:</b>
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccount.BankAccountId" />
                                <input hidden asp-for="BankAccount.AppUserId" />
                                <input hidden asp-for="BankAccount.SavingsBalance" />
                                <input hidden asp-for="BankAccount.CheckingsBalance" />
                                <input hidden asp-for="BankAccount.HolderName" />

                                <label asp-for="BankAccount.TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="BankAccount.TransactionAmount"  class="form-control" id="amount">

                                <button type="submit" asp-action="CheckingsToSavings" class="btn btn-primary">Send</button>
                                <span asp-validation-for="BankAccount.TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                            Withdraw cash&nbsp;<b>from Checkings:</b>
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccount.BankAccountId" />
                                <input hidden asp-for="BankAccount.AppUserId" />
                                <input hidden asp-for="BankAccount.SavingsBalance" />
                                <input hidden asp-for="BankAccount.CheckingsBalance" />
                                <input hidden asp-for="BankAccount.HolderName" />

                                <label asp-for="BankAccount.TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="BankAccount.TransactionAmount" class="form-control" id="amount">

                                <button type="submit" asp-action="WithDrawFromCheckings" class="btn btn-primary">Withdraw</button>
                                <span asp-validation-for="BankAccount.TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>
            </div><!-- Accordion ends -->            
        </div> <!-- Accordion div ends -->

        <!-- transactions div begins-->
        <div class="col-8">
            <h4 class="text-white">Transactions History</h4>
            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>
                            Transaction Id
                        </th>
                        <th>
                            Transaction Message
                        </th>
                        <th>
                            Previous Checkings Balance
                        </th>
                        <th>
                            Previous Savings Balance
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.Transactions.Count; i++)
                    {
                        TransactionDTO item = Model.Transactions[i];
                        string lastTransactionClass = "";

                        if (i == 0)
                        {
                            lastTransactionClass = "text-bg-info";
                        }

                        <tr class="@lastTransactionClass">
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreviousCheckingsBalance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreviousSavingsBalance)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>





