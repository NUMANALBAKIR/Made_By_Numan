@model Client.Models.BankDTOs.BankAccountDTO

<input hidden asp-for="BankAccountId" />
<input hidden asp-for="AppUserId" />
<input hidden asp-for="SavingsBalance" />
<input hidden asp-for="CheckingsBalance" />
<input hidden asp-for="HolderName" />

<div class="container-fluid p-2 text-black mt-2 mx-1 d-flex" style="border: solid 1px;">

    <div class="col-4">
        <h3>
            <u>Account Holder:</u><br />
            <b style="color:maroon;">
                @Model.HolderName
            </b>
        </h3>
    </div>

    <div class="col-8">
        <h3><i class="bi bi-bank2 text-secondary"></i>&nbsp;&nbsp;Bank-of-Numan</h3>
        <h5>[ <b>Balances saved in Persistence </b>]</h5>
    </div>
</div>

<div class="container mt-2 p-5 mx-1 bg-primary">
    <div class="row">
        <div class="col-6">
            <div class="card border-light mb-3" style="max-width: 20rem;">
                <div class="card-header">Checkings Account</div>
                <div class="card-body">
                    <h4 class="card-title">Balance: $<b>@Model.CheckingsBalance</b></h4>
                    <hr />
                    <p class="card-text text-danger">$5.0 is fined (to Checkings Account), if you try to withdraw cash or order food with insufficient Checkings Account balance.</p>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card border-light mb-3" style="max-width: 20rem;">
                <div class="card-header">Savings Account</div>
                <div class="card-body">
                    <h4 class="card-title">Balance: $<b>@Model.SavingsBalance</b></h4>
                </div>
            </div>
        </div>
    </div>


    <div class="row pt-4">
        <div class="col-6">
            <div class="accordion" id="accordionExample">

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            Add money&nbsp;<b>to Savings:</b>
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccountId" />
                                <input hidden asp-for="AppUserId" />
                                <input hidden asp-for="SavingsBalance" />
                                <input hidden asp-for="CheckingsBalance" />
                                <input hidden asp-for="HolderName" />

                                <label asp-for="TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="TransactionAmount" class="form-control"  id="amount">
                                
                                <button type="submit" asp-action="AddToSavings" class="btn btn-primary">Add</button>
                                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Transfer from&nbsp;<b>Savings to Checkings:</b>
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccountId" />
                                <input hidden asp-for="AppUserId" />
                                <input hidden asp-for="SavingsBalance" />
                                <input hidden asp-for="CheckingsBalance" />
                                <input hidden asp-for="HolderName" />

                                <label asp-for="TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="TransactionAmount" class="form-control"  id="amount">

                                <button type="submit" asp-action="SavingsToCheckings" class="btn btn-primary">Send</button>
                                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Transfer from&nbsp;<b>Checkings to Savings:</b>
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccountId" />
                                <input hidden asp-for="AppUserId" />
                                <input hidden asp-for="SavingsBalance" />
                                <input hidden asp-for="CheckingsBalance" />
                                <input hidden asp-for="HolderName" />

                                <label asp-for="TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="TransactionAmount"  class="form-control" id="amount">

                                <button type="submit" asp-action="CheckingsToSavings" class="btn btn-primary">Send</button>
                                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                            Withdraw cash&nbsp;<b>from Checkings:</b>
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <form method="post">

                                <input hidden asp-for="BankAccountId" />
                                <input hidden asp-for="AppUserId" />
                                <input hidden asp-for="SavingsBalance" />
                                <input hidden asp-for="CheckingsBalance" />
                                <input hidden asp-for="HolderName" />

                                <label asp-for="TransactionAmount" class="form-label">Amount:</label>
                                $<input asp-for="TransactionAmount" class="form-control" id="amount">

                                <button type="submit" asp-action="WithDrawFromCheckings" class="btn btn-primary">Withdraw</button>
                                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-6">
        </div>
    </div>

</div>
