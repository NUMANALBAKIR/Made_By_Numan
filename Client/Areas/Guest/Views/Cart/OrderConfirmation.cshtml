@model Client.Models.OrderFoodDTOs.OrderHeaderDTO

@{
    Layout = "~/Views/Shared/_Layout_OrderFood.cshtml";
    <style>
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
        }
    </style>
}

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center pt-2">Order Placed Successfully!</h1>
    </div>
    <div class="col-12 text-center">
        <br />
        Your Tracking Number is: <span style="color:maroon">
            @Model.TrackingNumber</span>
            <br />
    </div>

    <div class="col-12 text-center">
        <p class="pt-2">Confirmation email sent to <strong>@Model.EmailAddress</strong> </p>
        <p class="pt-2"><u>Please check email.</u></p>
    </div>

    <p class="pt-4 text-center">
        Cart has been cleared. But you can check order-details anytime using 'Order History' tab above.
    </p>

    <div class="col-12 text-center">
        <p class="pt-2">
            This transaction will be reflected in you Bank-Of-Numan account.
        </p>
    </div>

    <div class="d-flex justify-content-center">
        <a class="btn btn-info mx-2" asp-controller="Bank" asp-action="Index">Check Bank Balance</a>
    </div>


@*    <div class="d-flex justify-content-center">
        <a class="btn btn-secondary mx-2" asp-controller="OrderFood" asp-action="OrderHistory">Order History</a>
    </div>
*@

</div> 