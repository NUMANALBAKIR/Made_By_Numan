@model Client.Models.ViewModels.CartVM

@{
    Layout = "~/Views/Shared/_Layout_OrderFood.cshtml";
    <style>
        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
        }
    </style>
}

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center pt-2">Order Placed Successfully!</h1>
    </div>
    <div class="col-12 text-center">
        <br />
        Your Tracking Number is: <span style="color:maroon">
            a-b-cd
            @*@Model.OrderHeader.TrackingNumber</span>*@
            <br />
    </div>

    <div class="col-12 text-center">
        <p class="pt-4">Confirmation email sent to @*<strong>@Model.OrderHeader.EmailAddress</strong>*@ </p>
    </div>


    <div class="col-12 text-center">
        <p class="pt-4">
            Cart has been cleared. But you can check order-details in Order History.
        </p>
    </div>


    <div class="d-flex justify-content-center">
        <a class="btn btn-secondary mx-2" asp-controller="OrderFood" asp-action="OrderHistory">Order History</a>

        <a class="btn btn-info mx-2" asp-controller="Bank" asp-action="Index">Bank Balance</a>
    </div>


</div> 