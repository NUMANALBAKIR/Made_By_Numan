
<div class="container-fluid p-2 text-black text-center mt-2" style="border: solid 1px;">
    <h4>[ Using Javascript, Google-charts. ]</h4>
</div>

<div class="container mt-2 p-3 bg-gradient">

    <div class="row">
        <h4>Please enter values and click submit to Draw Chart below.</h4>

        <!-- chart form starts -->
        <form>
            <div class="my-3">
                <label for="work" class="form-label">Work :</label>
                <input name="hours[]" type="text" class="form-control" id="work" value=10>
            </div>
            <div class="my-3">
                <label for="sleep" class="form-label">Sleep :</label>
                <input name="hours[]" type="text" class="form-control" id="sleep" value=10>
            </div>
            <div class="my-3">
                <label for="watchtv" class="form-label">Watch TV :</label>
                <input name="hours[]" type="text" class="form-control" id="watchtv" value=3>
            </div>
            <div class="my-3">
                <label for="eat" class="form-label">Eat :</label>
                <input name="hours[]" type="text" class="form-control" id="eat" value=2>
            </div>

            <div class="mt-3">
                <input type="button" value="Submit" onclick="return Validate()" class="btn btn-outline-secondary btn-lg">
            </div>
        </form>
    </div>

    <div class="row">
        <div id="piechart_3d" style="width: 900px; height: 500px;"></div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(DrawChart);

        function DrawChart() {

            let work = Number(document.getElementById('work').value);
            let eat = Number(document.getElementById('eat').value);
            let watchtv = Number(document.getElementById('watchtv').value);
            let sleep = Number(document.getElementById('sleep').value);

            var data = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],
                ['Work', work],
                ['Eat', eat],
                ['Watch TV', watchtv],
                ['Sleep', sleep]
            ]);

            var options = {
                backgroundColor: 'transparent',
                is3D: true,
                fontSize: 20
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
            chart.draw(data, options);
        }

        function Validate() {

            var allHours = document.getElementsByName('hours[]');
            var total = 0;

            for (i = 0; i < allHours.length; i++) {
                total += parseInt(allHours[i].value);
            }

            if (total != 24) {
                alert('Please make 24 hours in total !');
                return false;
            }

            DrawChart();
            return true;
        }

    </script>
}