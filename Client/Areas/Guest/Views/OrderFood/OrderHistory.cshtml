@using Client.Models.OrderFoodDTOs;
@model List<Client.Models.OrderFoodDTOs.OrderHeaderDTO>

@{
    ViewData["Title"] = "OrderHistory";
    Layout = "~/Views/Shared/_Layout_OrderFood.cshtml";
}


<h1>Order History (Last on top)</h1>

<div class="container">
    <div class="row pt-4">
        <div>
            <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Order Id
                    </th>
                    <th>
                        Total Amount
                    </th>
                    <th>
                        Tracking Number
                    </th>
                    <th>
                        Order Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    OrderHeaderDTO item = Model[i];
                    string lastTransactionClass = "";

                    if (i == 0)
                    {
                        lastTransactionClass = "text-bg-info";
                    }

                    <tr class="@lastTransactionClass">
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderHeaderId)
                        </td>
                        <td>
                            @item.OrderTotal.ToString("c")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrackingNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>

<hr />


@section Scripts{
    <style>
        .footer {
            position: absolute;
/*            line-height: 80px;
*/            bottom: 0;
        }
    </style>
}