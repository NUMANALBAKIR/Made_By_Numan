@model IEnumerable<Client.Models.OrderFoodDTOs.OrderHeaderDTO>

@{
    ViewData["Title"] = "OrderHistory";
    Layout = "~/Views/Shared/_Layout_OrderFood.cshtml";
}


<h1>Order History</h1>

<table class="table table-striped table-hover">
    <thead class="table-success">
        <tr>
            <th>
                Order Id
            </th>
            <th>
                Total Amount
            </th>
            <th>
                Tracking Number
            </th>
            <th>
                Order Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderHeaderId)
                </td>
                <td>
                    @item.OrderTotal.ToString("c")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrackingNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    <style>
        .footer {
            position: absolute;
            bottom: 0;
        }
    </style>
}